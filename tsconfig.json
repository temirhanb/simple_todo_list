{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "baseUrl": "src",
    "paths": {
      "pages": ["./pages"],
      "app": ["./app"],
      "shared": ["./shared"],
      "features": ["./features"],
      "widgets": ["./widgets"],
    },
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
