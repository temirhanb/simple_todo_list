{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "src",
    "target": "es2021",
    "paths": {
      "app/*" : ["app/*"],
      "entities/*" : ["entities/*"],
      "widgets/*" : ["widgets/*"],
      "shared/*" : ["shared/*"],
      "page/*" : ["Page/*"],
      "features/*" : ["features/*"],
    },
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
